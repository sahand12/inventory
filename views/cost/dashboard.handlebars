<div class="col-md-8 cost-main-charts">
    <div class="row">
        <div class="col-xs-12 cost-main-last-30-days">
            <h1 class="h1 text-uppercase cost-helper-header"><span>last 30 days</span></h1>

            <div class="row">
                <div class="col-md-7 pie-chart-canvas">
                    <canvas id="pieChart" class="pie-chart" width="250" height="250"></canvas>
                </div>
                <div class="col-md-5 pie-chart-stat" id="pieChartStat">

                </div>
            </div>
        </div><!-- /.cost-main-last-30-days -->

        <div class="col-xs-12 cost-main-this-year">
            <h1 class="h1 text-uppercase cost-helper-header"><span>this year</span></h1>

            <div class="row">
                <div class="col-xs-10 col-xs-offset-1">
                    <canvas class="lineChart" id="lineChart"></canvas>
                </div>
            </div>

        </div><!-- /.cost-main-this-year -->
    </div><!-- /.row -->
</div><!-- /.cost-main-charts -->

<div class="col-md-4 cost-main-right-sidebar">
    <div class="row">
        <div class="cost-main-latest-activity">
            {{> cost/tables/latest-activity }}
        </div><!-- /.cost-main-sidebar-activity -->

        <div class="cost-main-upcoming-reminders">

        </div><!-- /.cost-main-right-sidebar-reminders -->
    </div><!-- /.row -->
</div><!-- /.cost-main-right-sidebar -->

