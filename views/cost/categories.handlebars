<div class="col-sm-8 cost-expenses-list">
    <div class="row">
        <div class="col-xs-12">
            <h1 class="cost-helper-header text-uppercase"><span>categories</span></h1>

            <section id="datePicker" class="row">
                <form class="form-inline">
                    <div class="form-group col-sm-4 col-xs-6">
                        <input class="form-control" type="date" name="start" id="start" value="{{date.lastMonth}}"/>
                    </div>
                    <div class="form-group col-sm-4 col-xs-6">
                        <input class="form-control" type="date" name="end" id="end" value="{{date.today}}"/>
                    </div>
                    <div class="col-sm-4 col-xs-12">
                        <button id="dateSearchBtn" class="btn vgn-btn-green" type="button">Search</button>
                    </div>
                </form>
            </section>

            <div class="row">
                <div class="col-xs-12">
                    <table class="table vgn-table" id="categoriesTable">
                        <thead class="vgn-table-thead">
                        <tr>
                            <th></th>
                            <th class="text-uppercase">Category Name <span class="fa fa-chevron-down"></span></th>
                            <th class="text-uppercase">amount</th>
                        </tr>
                        </thead>
                        <tbody class="vgn-table-tbody" id="categoriesTableBody"></tbody>
                    </table>
                </div>
            </div>

            <!-- Ajax animation spinner -->
            <div class="col-xs-12 categories-table-ajax-spinner" style="display: none;">
                <p class="text-center">
                    <img src="/images/spinner.gif" alt="loading ..."/><br/>
                    <!--loading-->
                </p>
            </div>
        </div>

        <div class="col-xs-12">
            <h1 class="h1 text-uppercase cost-helper-header"><span>categories chart</span></h1>

            <div class="col-xs-12 categories-table-ajax-spinner">
                <p class="text-center">
                    <img src="/images/spinner.gif" alt=""/><br/>
                    <!--loading-->
                </p>
            </div>

            <div class="row">
                <div class="col-xs-10 col-xs-offset-1" id="barChartContainer">

                </div>
            </div>

        </div><!--  -->
    </div>
</div>

<div class="col-sm-4 cost-total-expenses" id="costTotalExpenses">
    <h1 class="text-center text-capitalize">total expenses</h1>
    <div class="row">
        <div class="col-xs-12 cost-expenses-total-amount">
            <p class="text-center" id="totalExpensesAmount"></p>
        </div>
        <div class="col-xs-12">
            <canvas id="totalExpensesPieChart"></canvas>
        </div>
        <div class="col-xs-12">
            <div class="total-pie-chart-stats" id="totalPieChartStats"></div>
        </div>
    </div>
    <button type="button" id="createReportBtn" class="btn btn-block">Create Report</button>
</div>